<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
<!-- 在Bean标签中使用标签可以DI -->
<bean class="com.spring.demo.Book" id="book">
 <property name="name" value="book"></property>
 <property name="price" value="21.2"></property>
 </bean>
 <bean id="book222" class="com.spring.demo.Book">
 <constructor-arg name="name" value="book222"></constructor-arg>
 <constructor-arg name="price" value="222"></constructor-arg>
 </bean>
</beans>
